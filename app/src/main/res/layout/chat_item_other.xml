<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="80dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/rounded_corner_other">

    <TextView
        android:id="@+id/message_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/message"
        android:paddingStart="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message_user_name"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/message_user_name"
        android:paddingEnd="5dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/message_user_name"
        android:layout_marginTop="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:textColor="#000"
        android:textSize="16sp" />

</RelativeLayout>