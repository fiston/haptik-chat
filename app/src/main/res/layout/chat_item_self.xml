<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_corner_self">

        <TextView
            android:id="@+id/message_self_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Jyot"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_time_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/message_self_name"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/message_self_name"
            android:paddingEnd="5dp"
            android:text="03:52"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/message_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_self_name"
            android:layout_marginTop="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="bfjksnfsdfj wjlfnurn jkwnfiwnfwef ilfweniwenf nfwien wilfej ijfwn isndfkj nwfnwef iowenfjwe"
            android:textColor="#000"
            android:textSize="16sp" />

    </RelativeLayout>

</FrameLayout>